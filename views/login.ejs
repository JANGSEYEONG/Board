<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/login.css">

</head>
<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="/auth/register" method="POST" onsubmit="return beforeSubmit()">
                <h1>Create Account</h1>
                <input name="username" type="text" placeholder="Id" />
                <!-- <input type="text" placeholder="Id" /> -->
                <input id="pwd" name="password" type="password" placeholder="Password" />
                <input id="pwdConfirm" type="password" placeholder="Confirm Password" />
                <div id="checkMsg" style="font-size: small;">비밀번호가 일치하지 않습니다.</div>
                <button>Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form action="/auth/login" method="POST">
                <h1>Sign in</h1>
                <input name="username" type="text" placeholder="Id" />
                <input name="password" type="password" placeholder="Password" />
                <!-- <a href="#">Forgot your password?</a> -->
                <button>Sign In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        signUpButton.addEventListener('click', () => {
            container.classList.add("right-panel-active");
        });

        signInButton.addEventListener('click', () => {
            container.classList.remove("right-panel-active");
        });

        const pwdInput = document.getElementById('pwd');
        const pwdConfirmInput = document.getElementById('pwdConfirm');
        const checkMsg = document.getElementById('checkMsg');

        pwdConfirmInput.addEventListener('input', (event)=>{
            let confirmPwd = event.target.value;
            let originPwd = pwdInput.value;
            if(confirmPwd === originPwd){
                checkMsg.style.display = "none";
            }else{
                checkMsg.style.display = "block";
                // checkMsg.style.color = "red";
            }
            console.log(`nowPwd: ${confirmPwd} origin: ${originPwd}`)
        })

        const beforeSubmit = ()=>{
            if(pwdInput.value != pwdConfirmInput.value){
                alert("비밀번호를 재확인해주세요.")
                return false;
            }
        }
    </script>
</body>
</html>